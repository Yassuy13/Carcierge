<div class="categories">
  <div class="categories-item">
    <div class="title">
      <h2>カテゴリ一覧</h2>
    </div>
    <table class="table table-hover">
      <tbody>
        <% @categories.each do |category| %>
          <tr>
            <td><%= link_to category.name, posts_path(category_id: category.id) %></td>
            <td><%= category.created_at.strftime('%Y年%m月%d日 %H時%M分') %>作成</td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <%= paginate @categories %>
  </div>
</div>
