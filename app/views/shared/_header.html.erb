<div class ="header">
  <div class="header-form">
    <a href="/">Carcierge</a>
    <div>
      <%= form_with url: '/browses', method: :get do |f| %>
        <%= f.text_field :keyword, class:'form_txt', size: 10, value: params[:keyword], :placeholder => "キーワード" %>
        <%= f.submit '検索', name: nil, class: 'btn btn__search' %>
      <% end %>
    </div>
  </div>
  <div class="header-left">
    <div class="change-buttons">
      <% if user_signed_in? %>
        <p class="user-name"><%= current_user.name %></p>
        <% if current_user.name? %>
          <p class="header-img" id="user-img"><%= attachment_image_tag @user, :profile_image, :size => '50x50', class: 'user-img' %></p>
        <% else %>
          <p class="header-img" id="user-img"><%= image_tag "/assets/default_icon.jpg", :size => '50x50', class: 'user-img' %></p>
        <% end %>
        <div class="hamburger-menu">
          <input type="checkbox" id="menu-btn-check">
          <label for="menu-btn-check" class="menu-btn"><span></span></label>
          <div class="menu-content">
            <ul class="navbar-nav">
              <li class="nav-item">
                <%= link_to '投稿', new_post_path, class:"btn0" %>
              </li>
              <li class="nav-item">
                <%= link_to '投稿一覧', posts_path, class:"btn0" %>
              </li>
              <li class="nav-item">
                <%= link_to "設定", user_path(current_user), class:"btn0" %>
              </li>
              <li class="nav-item">
                <%= link_to "ログアウト", destroy_user_session_path, method: :delete, class:"btn0" %>
              </li>
            </ul>
          </div>
        </div>
      <% else %>
        <div class="login-item">
          <li class="nav-item">
            <%= link_to "ゲストログイン", users_guest_sign_in_path, method: :post, class: "btn1"%>
          </li>
          <li class="nav-item">
            <%= link_to "ログイン", new_user_session_path, class:"btn1"%>
          </li>
          <li class="nav-item">
            <%= link_to "新規登録", new_user_registration_path, class:"btn2"%>
          </li>
        </div>
      <% end %>
    </div>
  </div>
</div>
