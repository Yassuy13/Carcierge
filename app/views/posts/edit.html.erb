<div class="post">
  <div class="text">
    <div class="title">
      <h2>編集</h2>
    </div>
    <%= form_with(model: @post, local: true) do |f| %>
      <div>
        <%= f.label :title, "タイトル" %><br>
        <%= f.text_field :title, :size=>"40x10" %>
      </div>
      <div>
        <%= f.label :body, "本文" %><br>
        <%= f.text_area :body, :size=>"60x10" %>
      </div>
      <div>
        <%= f.label :image, "車の画像" %><br>
        <%= f.file_field :image, fallback: "no-image.png" %>
      </div>
      <div>
        <%= f.label :category_id, "カテゴリー" %>
        <%= f.collection_select :category_id, Category.all, :id, :name, { prompt: '選択してください' }, class: 'form-control' %>
      </div>
      <%= f.submit "投稿" %>
      <%= link_to("戻る", "/posts") %>
    <% end %>
  </div>
</div>
