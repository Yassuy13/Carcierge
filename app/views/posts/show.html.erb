<div class="post">
  <div class="text">
    <div class="title">
      <h2>投稿詳細</h2>
    </div>
    <% if current_user.name? %>
      <%= attachment_image_tag @post, :car_image, :size => '500x1', class: "images" %>
    <% else %>
      <%= image_tag "/assets/default_icon.jpg", :size => '50x50', class: 'images' %>
    <% end %>
    <p><%= @post.title %></p>
    <p><%= @post.body %></p>
    <% if @post.user_id == current_user.id %>
      <%= link_to("編集", "/posts/#{@post.id}/edit") %>
      <%= link_to("削除", "/posts/#{@post.id}", method: :delete, data: {confirm: "本当に削除しますか？"}) %>
      <%= link_to("戻る", "/posts") %>
    <% end %>
  </div>
</div>
