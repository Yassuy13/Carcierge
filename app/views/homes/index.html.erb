<div class="home-main">
  <%= render "shared/devise" %>
  <div class="main-search">
    <h3 class="main-message">Carciergeで新しい車探し</h3>
    <div class="container-form">
      <%= form_with url: '/browses', method: :get do |f| %>
        <%= f.text_field :keyword, class:'form__txt', size: 10, value: params[:keyword], :placeholder => "キーワード" %>
        <%= f.submit '検索', name: nil, class: 'btn btn__search' %>
      <% end %>
    </div>
    <div class="posts-form">
      <%= form_with url: '/posts', method: :get do |f| %>
        <%= f.submit '投稿する', name: nil, class: 'btn btn__search' %>
      <% end %>
    </div>
  </div>
</div>
